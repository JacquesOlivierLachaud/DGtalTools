//-----------------------------------------------------------------------------
template <typename TRealPoint, typename TRealVector>
typename DGtal::CorrectedNormalCurrentComputer<TRealPoint, TRealVector>::Scalar
DGtal::CorrectedNormalCurrentComputer<TRealPoint, TRealVector>::
interpolatedMu0 ( const WeightedFaces& wfaces ) const
{
  Scalar m = 0.0;
  for ( auto wf : wfaces )  m += wf.second * mu0[ wf.first ];
  return m;
}

