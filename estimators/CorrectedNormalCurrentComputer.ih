//-----------------------------------------------------------------------------
template <typename TRealPoint, typename TRealVector>
DGtal::CorrectedNormalCurrentComputer<TRealPoint, TRealVector>::
CorrectedNormalCurrentComputer( ConstAlias< SimplifiedMesh > aMesh )
  : myMesh( aMesh )
{}

//-----------------------------------------------------------------------------
template <typename TRealPoint, typename TRealVector>
bool
DGtal::CorrectedNormalCurrentComputer<TRealPoint, TRealVector>::
computeInterpolatedMeasures( Measure mu, bool unit_u )
{
  if ( myMesh.vertexNormals().empty() )
    {
      trace.warning() << "[CorrectedNormalCurrentComputer::computeInterpolatedMeasures]"
                      << " Unable to compute measures without vertex normals." << std::endl;
      return false;
    }
  if ( mu == Measure::ALL_MU || mu == Measure::MU0  ) computeInterpolatedMu0 ( unit_u );
  if ( mu == Measure::ALL_MU || mu == Measure::MU1  ) computeInterpolatedMu1 ( unit_u );
  if ( mu == Measure::ALL_MU || mu == Measure::MU2  ) computeInterpolatedMu2 ( unit_u );
  if ( mu == Measure::ALL_MU || mu == Measure::MUXY ) computeInterpolatedMuXY( unit_u );
  return true;
}

//-----------------------------------------------------------------------------
template <typename TRealPoint, typename TRealVector>
bool
DGtal::CorrectedNormalCurrentComputer<TRealPoint, TRealVector>::
computeInterpolatedMu0( bool unit_u )
{
  if ( myMesh.vertexNormals().empty() )
    {
      trace.warning() << "[CorrectedNormalCurrentComputer::computeInterpolatedMu0]"
                      << " Unable to compute measures without vertex normals." << std::endl;
      return false;
    }
  mu0.resize( myMesh.nbFaces() );
  Index idx_f = 0;
  for ( auto f : myMesh.incidentVertices() )
    {
      RealPoints  p( f.size() );
      RealVectors u( f.size() );
      for ( Index idx_v = 0; idx_v < f.size(); ++idx_v )
        {
          p[ idx_v ] = myMesh.positions()    [ f[ idx_v ] ];
          u[ idx_v ] = myMesh.vertexNormals()[ f[ idx_v ] ];
        }
      mu0[ idx_f++ ] = Formula::mu0InterpolatedU( p, u, unit_u );
    }
  return true;
}

